<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="au.edu.unsw.business.studysync.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_baseline_intro"
            app:destination="@id/BaselineIntroFragment"
            app:popUpTo="@id/LoginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_login_to_treatment"
            app:destination="@id/TreatmentFragment"
            app:popUpTo="@id/LoginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/BaselineIntroFragment"
        android:name="au.edu.unsw.business.studysync.BaselineIntroFragment"
        android:label="Baseline Intro"
        tools:layout="@layout/fragment_baseline_intro">

        <action
            android:id="@+id/action_baseline_intro_to_login"
            app:destination="@id/LoginFragment"
            app:popUpTo="@id/BaselineIntroFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/TreatmentFragment"
        android:name="au.edu.unsw.business.studysync.TreatmentFragment"
        android:label="Treatment"
        tools:layout="@layout/fragment_treatment">

    </fragment>

</navigation>