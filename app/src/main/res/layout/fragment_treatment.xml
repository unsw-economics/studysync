<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="au.edu.unsw.business.studysync.MainViewModel" />
        <variable
            name="treatmentVm"
            type="au.edu.unsw.business.studysync.TreatmentViewModel" />
        <variable
            name="timeUtils"
            type="au.edu.unsw.business.studysync.logic.TimeUtils" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/treatmentHintLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:text="@string/treatment_hint"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progress="@{timeUtils.percentage(treatmentVm.timeSpentToday, vm.subjectSettings.treatmentLimit)}"
                    app:indicatorColor="@color/orange"
                    app:indicatorSize="240dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:trackColor="#00000000"
                    app:trackCornerRadius="5dp"
                    app:trackThickness="5dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/todayUsageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans_light"
                        android:text="@{timeUtils.digitalTimeHm(treatmentVm.timeSpentToday)}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="64sp" />

                    <TextView
                        android:id="@+id/maxUsageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans_light"
                        android:text="@{@string/max_usage_format(timeUtils.digitalTimeHm(vm.subjectSettings.treatmentLimit))}"
                        android:textColor="#888888"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/incentiveLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/treatment_incentive_label"
                    android:textColor="#CCFFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/incentiveView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans_medium"
                    android:gravity="end|center_vertical"
                    android:text="@{@string/dollar_format(treatmentVm.dailyIncentive)}"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalEarnedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/treatment_earned_label"
                    android:textColor="#CC6ADB58"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/totalEarnedView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans_medium"
                    android:gravity="end|center_vertical"
                    android:text="@{@string/dollar_format(treatmentVm.valueEarned)}"
                    android:textColor="#6ADB58"
                    android:textSize="30sp" />
            </LinearLayout>

            <Button
                android:id="@+id/clearDataButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Data" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>