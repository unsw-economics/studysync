<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudySync" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#24242D</item>
        <item name="colorPrimaryVariant">#1c1c24</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:colorControlActivated">?attr/colorOnPrimary</item>
        <item name="android:editTextBackground">@color/grey</item>
        <item name="android:editTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="Theme.StudySync.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StudySync.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StudySync.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>